@model MagicBus.Providers.ViewModel.Model.TripViewModel

@Html.Partial("_ActivityInfo")
<div class="form-group">
    <label asp-for="From"></label>
    <div class="input-group">
        <input type="text" class="form-control" asp-for="From" autocomplete="off" value="@Model.From">
        <span class="input-group-addon">
            <button type="submit" name="SubmitButtonUsed" class="glyphicon glyphicon-map-marker" value="Select it!" formnovalidate></button>
        </span>
    </div>
</div>
<div class="form-group">
    <label asp-for="To"></label>
    <input class="form-control" type="text" asp-for="To" autocomplete="off" value="@Model.To">
</div>
<div class="form-group">
    <label asp-for="By"></label>
    <select asp-for="By" asp-items="Html.GetEnumSelectList<MagicBus.Model.ModeOfTransport>()" class="form-control"></select>
</div>
@Html.Partial("_ActivityToolbar")