@model TDiary.Providers.ViewModel.Model.ExperienceListViewModel

@if (Model.ShowRecentExperiences)
{
    <h3>Experiences:</h3>
    @foreach (var i in Model.Experiences)
    {
        <div class="row experience">
            <div class="col-sm-7">
                <a class="clickable-experience" asp-action="Edit" asp-controller="@i.ExperienceType" asp-route-id="@i.Id">@i.FullExperience</a><br>
            </div>
                <div class="col-sm-5">
                <a class="" asp-action="OrderActivityUp" asp-route-activityId="@i.Id">This happened after the experience above</a><br>
                <a class="" asp-action="OrderActivityDown" asp-route-activityId="@i.Id">This happened before the experience below</a><br>
                <a class="" asp-action="Delete" asp-controller="@i.ExperienceType" asp-route-id="@i.Id" title="Delete this @i.ExperienceType">This never happened!</a>
            </div>
        </div>
    }
}
else
{
    <h3>You haven't experienced much yet! Get adventuring!</h3>
}