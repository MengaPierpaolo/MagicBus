@model TDiary.Providers.ViewModel.Model.TripViewModel

<input type="hidden" asp-for="SavePosition">
<div class="text-danger" asp-validation-summary="All"></div>
@Html.EditorFor(m => m.Date)
<div class="form-group">
    <label asp-for="From"></label>
    <input class="form-control" type="text" asp-for="From" autocomplete="off">
</div>
<div class="form-group">
    <label asp-for="To"></label>
    <input class="form-control" type="text" asp-for="To" autocomplete="off">
</div>
<div class="form-group">
    <label asp-for="By"></label>
    <select asp-for="By" asp-items="Html.GetEnumSelectList<TDiary.Model.ModeOfTransport>()" class="form-control"></select>
</div>
<input name="submitButtonUsed" type="submit" class="btn btn-primary" value="Save it!">
