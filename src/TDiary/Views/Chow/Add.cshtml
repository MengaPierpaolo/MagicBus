@model TDiary.ViewModel.ChowViewModel

<div class="jumbotron">
    <h1>Had some Chow?</h1>
    <p>Yum, add it to the list!</p>
</div>

<div class="content">
    <form class="form" role="form" asp-action="Add">
        <div class="form-group">
            <label>On:</label>
            <input class="form-control" type="text" asp-for="Date" autocomplete="off"> 
        </div>
        <div class="form-group">     
            <label>Plate description:</label> 
            <input type="text" class="form-control" asp-for="Description" autocomplete="off">
        </div> 
        <input name="SubmitButtonUsed" type="submit" class="btn btn-primary" value="Add it!"> 
        <input name="SubmitButtonUsed" type="submit" class="btn btn-info" value="Changed my mind"> 
    </form> 
</div>