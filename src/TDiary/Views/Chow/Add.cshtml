@model TDiary.ViewModel.ChowViewModel

<div class="jumbotron">
    <h1>Had some Chow?</h1>
    <p>Yum, add it to the list!</p>
</div>

<div class="content">
    <form class="form" role="form" asp-action="Add">
        <div class="form-group">
            <label asp-for="Date"></label>
            <input class="form-control" type="text" asp-for="Date" autocomplete="off">
            <span asp-validation-for="Date" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" asp-for="Description" autocomplete="off">
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div asp-validation-summary="All"></div>
        <input name="SubmitButtonUsed" type="submit" class="btn btn-primary" value="Add it!">
        <input name="SubmitButtonUsed" type="submit" class="btn btn-info" value="Changed my mind" formnovalidate>
    </form>
</div>